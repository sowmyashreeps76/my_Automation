export async function verifyCustomerAndDocumentEmailMatch() {

  // --- CUSTOMER INFORMATION EMAIL ---
  await VerifyIfAddressContainEmail();
  await addressTextBox().waitFor({ state: 'visible', timeout: 5000 });

  const customerEmail = (await addressTextBox().inputValue()).trim();
  console.log("Customer Email:", customerEmail);

  // --- DOCUMENT INFORMATION EMAIL ---
  await emailAddressToBeVisible();
  await emailAddress().waitFor({ state: 'visible', timeout: 5000 });

  const documentEmail = (await emailAddress().inputValue()).trim();
  console.log("Document Email:", documentEmail);

  // --- ASSERTIONS ---
  await expect(customerEmail, "Customer Info email is empty").not.toEqual("");
  await expect(documentEmail, "Document Info email is empty").not.toEqual("");

  await expect(customerEmail, "Customer email and Document email do NOT match")
    .toEqual(documentEmail);
}
